<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_loyal_point" resource="default" engine="innodb" comment="Loyal customer stores">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_id"  unsigned="true"  identity="false" nullable="false" comment="Customer's Id"/>
        <column xsi:type="float" name="point" default="0" scale="4" precision="12" comment="Customer's loyal points"/>
        <column xsi:type="timestamp" name="last_update" comment="The last time custom ear a point"/>
        <!-- Primary key -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <!-- Foreign key -->
        <constraint xsi:type="foreign" referenceId="LOYAL_CUSTOMER_POINT_CUSTOMER_ID_CUSTOMER_ENTITY_ID" table="customer_loyal_point" column="id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="NO ACTION"/>

        <constraint xsi:type="unique" referenceId="LOYAL_CUSTOMER_POINT_CUSTOMER_ID">
            <column name="customer_id"/>
        </constraint>

    </table>
</schema>
